@page "/knowledgebase/kmsdetail"
@page "/knowledgebase/kmsdetail/{id}"
@using SemanticKernel.AIAgent.Domain.Repositories
@inject IKmsDetails_Repositories _kmsDetail_Repositories;
<CascadingValue Value="this">
    <div>
        <MRow Class="no-gutters">
            <div style="height:calc(100vh - 145px );">
                <KmsNav Title="测试知识库"/>
            </div>
            <div class="pl-6 rounded-2" style="height:calc(100vh - 145px ); width: calc(100% - 200px); overflow: hidden; display:block;">
                <div>
                    <MToolbar Dense Elevation="0" Class="rounded-2" Height="60">
                         <MTextField TValue="string"
                                     Class="task-search mx-4"
                                     HideDetails=true
                                     Placeholder="查询" @bind-Value=InputText>
                             <PrependContent>
                                 <MIcon Small Class="mt-1">fa fa-search</MIcon>
                             </PrependContent>
                         </MTextField>
                         <MButton MinWidth=60 Height=40 Outlined Class="text-btn rounded-pill"  >新建/导入</MButton>
                     </MToolbar>   
                   @*  <MList Dense Class="rounded-4 mt-6" Style="height: calc(100vh - 229px ); overflow-y:auto;"> *@
                     <MDataTable   Items="_kmsDetail_Repositories.GetList()" TItem="KmsDetails" ItemsPerPage="50" HideDefaultFooter Class="user table-border-none" Style="margin-top:5px">
                          <HeaderColContent Context="header">
                        </HeaderColContent>
                         <ItemColContent>
                         </ItemColContent>
                     </MDataTable>
                </div>
            </div>
        </MRow>
    </div>
</CascadingValue>